@model IEnumerable<SUPPORT_APPROVAL_ONLINE.Models.tbl_Request>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<title>Danh sách yêu cầu đã tạo</title>
<div class="x_panel">
    <div class="x_title">
        <h2>Danh sách đã tạo</h2>
        <ul class="nav navbar-right panel_toolbox">
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                <ul class="dropdown-menu" role="menu">
                    <li>
                        <a href="#">Settings 1</a>
                    </li>
                    <li>
                        <a href="#">Settings 2</a>
                    </li>
                </ul>
            </li>
            <li>
                <a class="close-link"><i class="fa fa-close"></i></a>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <table id="datatable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.date_Create)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.dealLine)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.cost)
                    </th>
                    <th>Trạng thái</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {
                    <tr>
                        <td>
                            <a href="@Url.Action("Details","Request",new {id = item.id })">@Html.DisplayFor(m=>item.date_Create.Year)<label>-LCA-RQ</label>@Html.DisplayFor(m => item.id) </a>
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.title)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.date_Create)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.dealLine)
                        </td>
                        <td>
                            @Html.DisplayFor(m => item.cost)
                        </td>
                        <td>
                            @if (item.U_Id_Approval == 1)
                            {
                                <label class="label label-success">Success</label>
                            }
                            else
                            {
                                @*<a href="@Url.Action("Details","Request",new {id = item.id })" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a>*@
                                <a href="@Url.Action("Edit","Request",new {id = item.id })" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Edit </a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
