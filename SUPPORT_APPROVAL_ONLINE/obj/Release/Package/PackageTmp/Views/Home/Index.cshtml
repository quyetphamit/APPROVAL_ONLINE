
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    var year = DateTime.Now.Year;
}
<title>Trang chủ</title>
@Html.ActionLink("Chuyển tới danh sách", "Index", "Request")

@foreach (var item in ViewBag.listYear)
{
    if (item == year)
    {
        <button type="button" class="button" onclick="location.href='@Url.Action("Index", "Request")'"><span>@item</span></button>
    }
    else
    {
        <button type="button" class="button" onclick="location.href='@Url.Action("SearchYear", "Request",new {year = item })'"><span>@item</span></button>
    }
    <br />

}


